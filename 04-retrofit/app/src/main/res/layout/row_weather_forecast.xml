<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/row_imageView"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:srcCompat="@drawable/cloudy" />

    <TextView
        android:id="@+id/row_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/row_pressure"
        app:layout_constraintStart_toStartOf="@+id/row_pressure"
        app:layout_constraintTop_toTopOf="@+id/row_temperature" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="humidity"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/row_temperature" />

    <TextView
        android:id="@+id/row_temperature"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:text="14"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/row_imageView"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/row_imageView"
        app:layout_constraintTop_toTopOf="@+id/row_imageView"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/row_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/row_temperature"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="pressure"
        app:layout_constraintBottom_toBottomOf="@+id/row_temperature"
        app:layout_constraintEnd_toStartOf="@+id/row_pressure" />

    <TextView
        android:id="@+id/date"
        android:layout_width="69dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="10/11/2022"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/row_imageView"
        app:layout_constraintStart_toStartOf="@+id/row_imageView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>